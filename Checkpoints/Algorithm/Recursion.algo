FUNCTION is_palindrome(word:STRING,s,e:INTEGER):boolean    //s=start and e=end
   VAR
    n:INTEGER;
    n:= word.length;
   BEGIN
      IF (s=e OR n=0) THEN
        return true
      ELSE IF (word[s] <> word[e]) THEN
        return false
      ELSE IF (s < e+1) THEN
        return is_palindrome(word,s+1,e-1);
      END_if
      return true
   END

   